@model IEnumerable<Tuan3_NguyenDucThong.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Ma Sach
        </th>
        <th>
           Ma loai
        </th>
        <th>
           Ten Sach
        </th>
        <th>
            Hinh
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @item.masach
    </td>
    <td>
        @item.TheLoai.maloai
    </td>
    <td>
        @item.tensach
    </td>
    <td>
        <img src="@item.hinh" style="width:50px; height : 50px"/>
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.masach }) |
        @Html.ActionLink("Details", "Details", new { id = item.masach }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.masach })
    </td>
</tr>
}

</table>
